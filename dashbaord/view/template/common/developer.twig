<div id="modal-developer" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fa-solid fa-cog"></i> {{ heading_title }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div id="alert-modal"></div>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>{{ text_html }}<br/>
                <span class="fw-light">{{ help_html }}</span></td>
              <td class="text-end"><button type="button" value="html" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
            <tr>
              <td>{{ text_cache }}<br/>
                <span class="fw-light">{{ help_cache }}</span></td>
              <td class="text-end"><button type="button" value="cache" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
            <tr>
              <td>{{ text_theme }}<br/>
                <span class="fw-light">{{ help_theme }}</span></td>
              <td class="text-end"><button type="button" value="theme" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
            <tr>
              <td>{{ text_sass_catalog }}<br/>
                <span class="fw-light">{{ help_sass_catalog }}</span></td>
              <td class="text-end"><button type="button" value="sass_catalog" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
            <tr>
              <td>{{ text_sass_admin }}<br/>
                <span class="fw-light">{{ help_sass_admin }}</span></td>
              <td class="text-end"><button type="button" value="sass_admin" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
            <tr>
              <td>{{ text_vendor }}<br/>
                <span class="fw-light">{{ help_vendor }}</span></td>
              <td class="text-end"><button type="button" value="vendor" data-bs-toggle="tooltip" title="{{ button_clear }}" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#modal-developer table button').on('click', function() {
    var element = this;

    $.ajax({
        url: 'index.php?route=common/developer.' + $(element).attr('value') + '&user_token={{ user_token }}',
        dataType: 'json',
        beforeSend: function() {
            $(element).button('loading');
        },
        complete: function() {
            $(element).button('reset');
        },
        success: function(json) {
            $('.alert-dismissible').remove();

            if (json['error']) {
                $('#alert-modal').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> ' + json['error'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
            }

            if (json['success']) {
                $('#alert-modal').prepend('<div class="alert alert-success alert-dismissible"><i class="fa-solid fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
            }
        },
        error: function(xhr, ajaxOptions, thrownError) {
            console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
});
//--></script>
